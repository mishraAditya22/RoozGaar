<%- include('header'); %>
<style>
    table, th, td {
  /* border: 1px solid purple; */
  padding: 5px;
}
    .table-c{
        justify-items: center;
        justify-content: center;
        text-align: center;
    }
    .custom-s{
        text-align: justify;
        padding-right: 8px;
    }
</style>
<h1>Recruiters</h1>
<div class="row table-c">
<table style="width:100%;background-color: beige;color: black;">
    <tr>
        <th>S.no</th>
        <th>Name</th>
        <th>Email</th>
        <th>About</th>
        <th>Company</th>
        <!-- <th>Company Info.</th> -->
        <th>Contact</th>

    </tr>
    
    <% for(var i=0; i<recruiterprofile.length; i++) { %>
        <hr size="10">
    <tr>
        <td width="5%"><%= i+1 %></td>
        <td width="20%"><%= recruiterprofile[i].name %></td>
        <td width="20%" style="text-align: left;"> <%= recruiterprofile[i].email %>    </td>
        <td width="10%"><%= recruiterprofile[i].about %> </td>
        <td width="10%"><%= recruiterprofile[i].company %> </td>
        <td width="15%"><%= recruiterprofile[i].contact %> </td>
        <td width="10%">
            <form action="/delete_recruiter" method="POST">
                <input name="r_email" value="<%= recruiterprofile[i].email %>" type="hidden">
                <button class="btn btn-danger" type="submit" style="width: 90px;margin: 0px;" onclick="return confirm('Are you sure you want to delete this recruiter?\n WARNING: This action cannot be repeated');" >Delete</button>
            </form>
        </td>
            
        </td>
    </tr>
    <% } %>
    <br>

</table>

</div>